        <nav class="navbar  navbar-expand-lg navbar-light bg-white text-capitalize text-black">
            <style>
                .logoIE {
                    height: auto;
                    width: auto;
                    max-height: 250px;
                    max-width: 200px;
                }
            </style>
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a class="navbar-brand @Url.MakeActiveClass("home","index")" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/Images/LogoIE.PNG" class="logoIE" />
                </a>
                <div class="collapse navbar-collapse" id="navbarColor02">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
