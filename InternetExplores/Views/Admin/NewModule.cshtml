@model InternetExplores.Models.ModuleModel
@{
    ViewData["Title"] = "NewModule";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="page-wrapper">
    <div class="content">
        @if (ViewBag.MSucess == true)
        {

            ViewBag.MSucess = false;
            <div class="alert alert-primary alert-dismissible fade show" role="alert">
                <strong>Thank you.</strong> You have Updated module details successfully. <br />
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <div class="row">
            <div class="col-sm-7 col-6">
                <h4 class="page-title"><i class="fa fa-plus"></i> Add New Module</h4>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                @using (Html.BeginForm("NewModule", "Admin", FormMethod.Get))
                {

                    <div class="card-box">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Code:</label>
                                    <input asp-for="ModuleCode" type="text" class="form-control" required>
                                </div>
                                <div class="form-group">
                                    <label>Name:</label>
                                    <input asp-for="Modulename" type="text" class="form-control" required>
                                </div>
                                <div class="form-group">
                                    <label>Pre requisites:</label>
                                    <input asp-for="ModulePre_requisites" type="text" class="form-control" required>
                                </div>
                                <div class="form-group">
                                    <label>Description:</label>
                                    <textarea asp-for="ModuleDescription" rows="5" cols="5" required class="form-control" placeholder="Enter Description"></textarea>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Cost:</label>
                                            <input asp-for="ModuleCost" type="number" class="form-control" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Credits:</label>
                                            <input asp-for="ModuleCredit" type="number" class="form-control" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>Status:</label>
                                        <select asp-for="ModulesStatus" id="Studentstatus" class="dropdown-item-text text-white bg-secondary" aria-label="Default select example" required>
                                            <option selected value="Active">Active</option>
                                            <option value="	Inactive">Inactive</option>

                                        </select>
                                    </div>
                                    <div class="col-md-6">
                                        <label>Faculty:</label>
                                        <select asp-for="faculty" id="Studentstatus" class="dropdown-item-text text-white bg-secondary" aria-label="Default select example" required>
                                            <option selected value="Edu"> Education </option>
                                            <option value="Eng">Engineering </option>
                                            <option value="HSci"> Health Sciences </option>
                                            <option value="HumD&SScis"> Humanities, Dev & Social Sciences </option>
                                            <option value="Law&IT"> Law and Infromation Technology </option>
                                            <option value="Sci&Agric"> Science and Agriculture </option>
                                        </select>
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="col-md-12">
                                        <label>Belongs to:</label>
                                        <select asp-for="levelOdstudy" id="Studentstatus" class="dropdown-item-text text-white bg-secondary" aria-label="Default select example" required>
                                            <option selected value="1"> 1st Year </option>
                                            <option value="2"> 2nd Year </option>
                                            <option value="3"> 3rd Year </option>
                                            <option value="4"> Postgraduate Diplomas </option>

                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="text-right">
                            <button class="btn btn-primary" type="submit">Add Module</button>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <br />
    <br /> <br /> <br /> <br /> <br /> <br /> <br />
</div>
}
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
    $(function () {
        $("#submit").click(function () {
            document.forms[1].submit;
            return true;
        });
    });
</script>
