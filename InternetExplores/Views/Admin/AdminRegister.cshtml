@model InternetExplores.Models.AdminModel
@{
    ViewData["Title"] = "AdminRegister";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="page-wrapper">

    <div class="content">
        @if (ViewBag.regError == true)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                @Html.ValidationSummary(true, "", new { @class = "field text-danger" })
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        @if (ViewBag.done == true)
        {
            <div class="alert alert-primary alert-dismissible fade show" role="alert">
                <b>You have added a new ADMIN successfully.</b>  <br />
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <div class="main-wrapper  account-wrapper">
            <div class="account-page">
                <div class="account-center">
                    <div class="account-box">
                        @using (Html.BeginForm("AdminRegister", "Admin", FormMethod.Post))
                        {
                            <div class="form-group">
                                <label>Name</label>
                                <input asp-for="AdminName" type="text" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label>Surname</label>
                                <input asp-for="AdminSurname" type="text" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label>Phone Number</label>
                                <input asp-for="AdminPhoneNo" type="number" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label>Id Number</label>
                                <input asp-for="AdminIDNo" type="number" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label>Email Address</label>
                                <input asp-for="AdminEmail" type="email" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label>Type</label>
                                <p>
                                    <select asp-for="AdminType" id="Studentstatus" class="dropdown-item-text text-white bg-secondary" aria-label="Default select example" required>
                                        <option selected value="Super">Super                                                   </option>
                                        <option value="General">General                                                       </option>
                                    </select>
                                </p>
                            </div>
                            <div class="form-group" hidden>
                                <label></label>
                                <p>
                                    <select asp-for="AdminStatus" id="Studentstatus" class="dropdown-item-text text-white bg-secondary" aria-label="Default select example" required>
                                        <option selected value="Active">Active</option>
                                        <option value="	Inactive">Inactive</option>
                                    </select>
                                </p>
                            </div>

                            <div class="form-group">
                                <label>Password</label>
                                <input data-bs-toggle="tooltip" data-bs-placement="right" title="Uppercase characters (A-Z) Lowercase characters (a-z) Digits (0-9)" asp-for="password" type="password" class="form-control" required>
                            </div>

                            <div class="form-group">
                                <label>Confirm Password</label>
                                <input id="tooltip" asp-for="ConfirmPassword" type="password" class="form-control" required>
                            </div>
                            <div class="form-group checkbox">
                            </div>
                            <div class="form-group text-center">
                                <button class="btn btn-primary" type="submit">Register</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
